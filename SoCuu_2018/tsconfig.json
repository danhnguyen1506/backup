{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false
    // "inlineSourceMap" : true,
    // "sourceRoot": "src"
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.xml"
  ],
  "types": [
    "react",
    "react-native",
    "jest",
    "nodejs",
    "javascript",
    "xml"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules",
    "index.ios.js",
    "index.android.js",
    "index.js",
    "__tests__"
  ],
  "compileOnSave": false
}